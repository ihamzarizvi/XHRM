{"ast":null,"code":"import { ref, onMounted } from 'vue';\nimport { OxdIcon } from '@ohrm/oxd';\nexport default {\n  name: 'DarkModeToggle',\n  components: {\n    'oxd-icon': OxdIcon\n  },\n  setup() {\n    const isDarkMode = ref(false);\n    const applyTheme = dark => {\n      isDarkMode.value = dark;\n      if (dark) {\n        document.documentElement.setAttribute('data-theme', 'dark');\n        localStorage.setItem('xhrm-theme', 'dark');\n      } else {\n        document.documentElement.removeAttribute('data-theme');\n        localStorage.setItem('xhrm-theme', 'light');\n      }\n    };\n    const toggleDarkMode = () => {\n      applyTheme(!isDarkMode.value);\n    };\n    onMounted(() => {\n      const savedTheme = localStorage.getItem('xhrm-theme');\n      if (savedTheme === 'dark' || !savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches) {\n        applyTheme(true);\n      }\n    });\n    return {\n      isDarkMode,\n      toggleDarkMode\n    };\n  }\n};","map":{"version":3,"names":["ref","onMounted","OxdIcon","name","components","setup","isDarkMode","applyTheme","dark","value","document","documentElement","setAttribute","localStorage","setItem","removeAttribute","toggleDarkMode","savedTheme","getItem","window","matchMedia","matches"],"sources":["C:\\Users\\x\\Documents\\Projects\\HRM\\XHRM\\src\\client\\src\\core\\components\\layout\\DarkModeToggle.vue"],"sourcesContent":["<template>\r\n  <div class=\"XHRM-dark-mode-toggle\">\r\n    <button\r\n      type=\"button\"\r\n      class=\"oxd-icon-button\"\r\n      @click=\"toggleDarkMode\"\r\n      :title=\"isDarkMode ? $t('general.switch_to_light_mode') : $t('general.switch_to_dark_mode')\"\r\n    >\r\n      <oxd-icon\r\n        type=\"svg\"\r\n        :name=\"isDarkMode ? 'sun' : 'moon'\"\r\n        class=\"XHRM-theme-icon\"\r\n      ></oxd-icon>\r\n    </button>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport {ref, onMounted} from 'vue';\r\nimport {OxdIcon} from '@ohrm/oxd';\r\n\r\nexport default {\r\n  name: 'DarkModeToggle',\r\n  components: {\r\n    'oxd-icon': OxdIcon,\r\n  },\r\n  setup() {\r\n    const isDarkMode = ref(false);\r\n\r\n    const applyTheme = (dark) => {\r\n      isDarkMode.value = dark;\r\n      if (dark) {\r\n        document.documentElement.setAttribute('data-theme', 'dark');\r\n        localStorage.setItem('xhrm-theme', 'dark');\r\n      } else {\r\n        document.documentElement.removeAttribute('data-theme');\r\n        localStorage.setItem('xhrm-theme', 'light');\r\n      }\r\n    };\r\n\r\n    const toggleDarkMode = () => {\r\n      applyTheme(!isDarkMode.value);\r\n    };\r\n\r\n    onMounted(() => {\r\n      const savedTheme = localStorage.getItem('xhrm-theme');\r\n      if (savedTheme === 'dark' || (!savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {\r\n        applyTheme(true);\r\n      }\r\n    });\r\n\r\n    return {\r\n      isDarkMode,\r\n      toggleDarkMode,\r\n    };\r\n  },\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.XHRM-dark-mode-toggle {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  margin-right: 15px;\r\n\r\n  .oxd-icon-button {\r\n    color: var(--oxd-text-primary);\r\n    transition: transform 0.3s ease;\r\n    \r\n    &:hover {\r\n      transform: rotate(15deg) scale(1.1);\r\n    }\r\n  }\r\n}\r\n\r\n.XHRM-theme-icon {\r\n  width: 20px;\r\n  height: 20px;\r\n}\r\n</style>\r\n"],"mappings":"AAkBA,SAAQA,GAAG,EAAEC,SAAS,QAAO,KAAK;AAClC,SAAQC,OAAO,QAAO,WAAW;AAEjC,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,UAAU,EAAE;IACV,UAAU,EAAEF;EACd,CAAC;EACDG,KAAKA,CAAA,EAAG;IACN,MAAMC,UAAS,GAAIN,GAAG,CAAC,KAAK,CAAC;IAE7B,MAAMO,UAAS,GAAKC,IAAI,IAAK;MAC3BF,UAAU,CAACG,KAAI,GAAID,IAAI;MACvB,IAAIA,IAAI,EAAE;QACRE,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,YAAY,EAAE,MAAM,CAAC;QAC3DC,YAAY,CAACC,OAAO,CAAC,YAAY,EAAE,MAAM,CAAC;MAC5C,OAAO;QACLJ,QAAQ,CAACC,eAAe,CAACI,eAAe,CAAC,YAAY,CAAC;QACtDF,YAAY,CAACC,OAAO,CAAC,YAAY,EAAE,OAAO,CAAC;MAC7C;IACF,CAAC;IAED,MAAME,cAAa,GAAIA,CAA