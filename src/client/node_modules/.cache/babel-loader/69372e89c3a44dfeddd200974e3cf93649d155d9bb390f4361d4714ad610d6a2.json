{"ast":null,"code":"import { ref, onMounted } from 'vue';\nimport { OxdIcon } from '@ohrm/oxd';\nexport default {\n  name: 'DarkModeToggle',\n  components: {\n    'oxd-icon': OxdIcon\n  },\n  setup() {\n    const isDarkMode = ref(false);\n    const applyTheme = dark => {\n      isDarkMode.value = dark;\n      if (dark) {\n        document.documentElement.setAttribute('data-theme', 'dark');\n        localStorage.setItem('xhrm-theme', 'dark');\n      } else {\n        document.documentElement.removeAttribute('data-theme');\n        localStorage.setItem('xhrm-theme', 'light');\n      }\n    };\n    const toggleDarkMode = () => {\n      applyTheme(!isDarkMode.value);\n    };\n    onMounted(() => {\n      const savedTheme = localStorage.getItem('xhrm-theme');\n      if (savedTheme === 'dark' || !savedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches) {\n        applyTheme(true);\n      }\n    });\n    return {\n      isDarkMode,\n      toggleDarkMode\n    };\n  }\n};","map":{"version":3,"names":["ref","onMounted","OxdIcon","name","components","setup","isDarkMode","applyTheme","dark","value","document","documentElement","setAttribute","localStorage","setItem","removeAttribute","toggleDarkMode","savedTheme","getItem","window","matchMedia","matches"],"sources":["C:\\Users\\x\\Documents\\Projects\\HRM\\XHRM\\src\\client\\src\\core\\components\\layout\\DarkModeToggle.vue"],"sourcesContent":["<template>\n  <div class=\"XHRM-dark-mode-toggle\">\n    <button\n      type=\"button\"\n      class=\"oxd-icon-button\"\n      :title=\"\n        isDarkMode\n          ? $t('general.switch_to_light_mode')\n          : $t('general.switch_to_dark_mode')\n      \"\n      @click=\"toggleDarkMode\"\n    >\n      <oxd-icon\n        type=\"svg\"\n        :name=\"isDarkMode ? 'sun' : 'moon'\"\n        class=\"XHRM-theme-icon\"\n      ></oxd-icon>\n    </button>\n  </div>\n</template>\n\n<script>\nimport {ref, onMounted} from 'vue';\nimport {OxdIcon} from '@ohrm/oxd';\n\nexport default {\n  name: 'DarkModeToggle',\n  components: {\n    'oxd-icon': OxdIcon,\n  },\n  setup() {\n    const isDarkMode = ref(false);\n\n    const applyTheme = (dark) => {\n      isDarkMode.value = dark;\n      if (dark) {\n        document.documentElement.setAttribute('data-theme', 'dark');\n        localStorage.setItem('xhrm-theme', 'dark');\n      } else {\n        document.documentElement.removeAttribute('data-theme');\n        localStorage.setItem('xhrm-theme', 'light');\n      }\n    };\n\n    const toggleDarkMode = () => {\n      applyTheme(!isDarkMode.value);\n    };\n\n    onMounted(() => {\n      const savedTheme = localStorage.getItem('xhrm-theme');\n      if (\n        savedTheme === 'dark' ||\n        (!savedTheme &&\n          window.matchMedia('(prefers-color-scheme: dark)').matches)\n      ) {\n        applyTheme(true);\n      }\n    });\n\n    return {\n      isDarkMode,\n      toggleDarkMode,\n    };\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n.XHRM-dark-mode-toggle {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  margin-right: 15px;\n\n  .oxd-icon-button {\n    color: var(--oxd-text-primary);\n    transition: transform 0.3s ease;\n\n    &:hover {\n      transform: rotate(15deg) scale(1.1);\n    }\n  }\n}\n\n.XHRM-theme-icon {\n  width: 20px;\n  height: 20px;\n}\n</style>\n"],"mappings":"AAsBA,SAAQA,GAAG,EAAEC,SAAS,QAAO,KAAK;AAClC,SAAQC,OAAO,QAAO,WAAW;AAEjC,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,UAAU,EAAE;IACV,UAAU,EAAEF;EACd,CAAC;EACDG,KAAKA,CAAA,EAAG;IACN,MAAMC,UAAS,GAAIN,GAAG,CAAC,KAAK,CAAC;IAE7B,MAAMO,UAAS,GAAKC,IAAI,IAAK;MAC3BF,UAAU,CAACG,KAAI,GAAID,IAAI;MACvB,IAAIA,IAAI,EAAE;QACRE,QAAQ,CAACC,eAAe,CAACC,YAAY,CAAC,YAAY,EAAE,MAAM,CAAC;QAC3DC,YAAY,CAACC,OAAO,CAAC,YAAY,EAAE,MAAM,CAAC;MAC5C,OAAO;QACLJ,QAAQ,CAACC,eAAe,CAACI,eAAe,CAAC,YAAY,CAAC;QACtDF,YAAY,CAACC,OAAO,CAAC,YAAY,EAAE,OAAO,CAAC;MAC7C;IACF,CAAC;IAED,MAAME,cAAa,GAAIA,CAAA,KAAM;MAC3BT,UAAU,CAAC,CAACD,UAAU,CAACG,KAAK,CAAC;IAC/B,CAAC;IAEDR,SAAS,CAAC,MAAM;MACd,