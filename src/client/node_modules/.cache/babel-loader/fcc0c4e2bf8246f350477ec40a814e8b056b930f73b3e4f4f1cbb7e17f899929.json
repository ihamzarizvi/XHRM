n) any later version.\n *\n * XHRM is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY;\n * without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.\n * See the GNU General Public License for more details.\n *\n * You should have received a copy of the GNU General Public License along with XHRM.\n * If not, see <https://www.gnu.org/licenses/>.\n */\n -->\n\n<template>\n  <div class=\"XHRM-card-container\">\n    <div class=\"XHRM-vacancy-card-header\">\n      <oxd-text type=\"card-title\">\n        {{ vacancyTitle }}\n      </oxd-text>\n      <oxd-button\n        :label=\"$t('general.apply')\"\n        display-type=\"secondary\"\n        class=\"oxd-button\"\n        @click=\"apply\"\n      ></oxd-button>\n    </div>\n    <oxd-divider v-show=\"vacancyDescription\"></oxd-divider>\n    <div :class=\"{'XHRM-vacancy-card-body': isViewDetails}\">\n      <oxd-text type=\"toast-message\">\n        <pre v-if=\"vacancyDescription\" class=\"XHRM-vacancy-card-pre-tag\">{{\n          vacancyDescription\n        }}</pre>\n      </oxd-text>\n    </div>\n    <div\n      v-if=\"vacancyDescription && vacancyDescription.length > descriptionLength\"\n      class=\"XHRM-vacancy-card-footer\"\n    >\n      <a @click=\"viewDetails\">\n        <oxd-text tag=\"p\" class=\"XHRM-vacancy-card-anchor-tag\">\n          {{\n            isViewDetails ? $t('general.show_more') : $t('general.show_less')\n          }}\n        </oxd-text>\n      </a>\n    </div>\n  </div>\n</template>\n\n<script>\nimport {toRefs} from 'vue';\nimport {navigate} from '@/core/util/helper/navigation';\nimport {useResponsive} from '@ohrm/oxd';\n\nexport default {\n  name: 'VacancyCard',\n  props: {\n    vacancyId: {\n      type: Number,\n      required: true,\n    },\n    vacancyTitle: {\n      type: String,\n      required: true,\n    },\n    vacancyDescription: {\n      type: String,\n      required: true,\n    },\n  },\n  setup() {\n    const responsiveState = useResponsive();\n    return {\n      ...toRefs(responsiveState),\n    };\n  },\n  data() {\n    return {\n      viewMore: false,\n    };\n  },\n  computed: {\n    isMobile() {\n      return this.windowWidth < 600;\n    },\n    isViewDetails() {\n      return !this.viewMore;\n    },\n    descriptionLength() {\n      if (this.isMobile) return 150;\n      return this.windowWidth < 1920 ? 250 : 400;\n    },\n  },\n  methods: {\n    viewDetails() {\n      this.viewMore = !this.viewMore;\n    },\n    apply() {\n      navigate('/recruitmentApply/applyVacancy/id/{id}', {id: this.vacancyId});\n    },\n  },\n};\n</script>\n\n<style src=\"../pages/public-job-vacancy.scss\" lang=\"scss\" scoped></style>\n\r\n"],"mappings":"AAwDA,SAAQA,MAAM,QAAO,KAAK;AAC1B,SAAQC,QAAQ,QAAO,+BAA+B;AACtD,SAAQC,aAAa,QAAO,WAAW;AAEvC,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAK,EAAE;IACLC,SAAS,EAAE;MACTC,IAAI,EAAEC,MAAM;MACZC,QAAQ,EAAE;IACZ,CAAC;IACDC,YAAY,EAAE;MACZH,IAAI,EAAEI,MAAM;MACZF,QAAQ,EAAE;IACZ,CAAC;IACDG,kBAAkB,EAAE;MAClBL,IAAI,EAAEI,MAAM;MACZF,QAAQ,EAAE;IACZ;EACF,CAAC;EACDI,KAAKA,CAAA,EAAG;IACN,MAAMC,eAAc,GAAIX,aAAa,CAAC,CAAC;IACvC,OAAO;MACL,GAAGF,MAAM,CAACa,eAAe;IAC3B,CAAC;EACH,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,QAAQA,CAAA,EAAG;MACT,OAAO,IAAI,CAACC,WAAU,GAAI,GAAG;IAC/B,CAAC;IACDC,aAAaA,CAAA,EAAG;MACd,OAAO,CAAC,IAAI,CAACJ,QAAQ;IACvB,CAAC;IACDK,iBAAiBA,CAAA,EAAG;MAClB,IAAI,IAAI,CAACH,QAAQ,EAAE,OAAO,GAAG;MAC7B,OAAO,IAAI,CAACC,WAAU,GAAI,IAAG,GAAI,GAAE,GAAI,GAAG;IAC5C;EACF,CAAC;EACDG,OAAO,EAAE;IACPC,WAAWA,CAAA,EAAG;MACZ,IAAI,CAACP,QAAO,GAAI,CAAC,IAAI,CAACA,QAAQ;IAChC,CAAC;IACDQ,KAAKA,CAAA,EAAG;MACNtB,QAAQ,CAAC,wCAAwC,EAAE;QAACuB,EAAE,EAAE,IAAI,CAACnB;MAAS,CAAC,CAAC;IAC1E;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}