kModeToggle',\n  components: {\n    'oxd-icon': OxdIcon,\n  },\n  setup() {\n    const isDarkMode = ref(false);\n\n    const applyTheme = (dark) => {\n      isDarkMode.value = dark;\n      if (dark) {\n        document.documentElement.setAttribute('data-theme', 'dark');\n        localStorage.setItem('xhrm-theme', 'dark');\n      } else {\n        document.documentElement.removeAttribute('data-theme');\n        localStorage.setItem('xhrm-theme', 'light');\n      }\n    };\n\n    const toggleDarkMode = () => {\n      applyTheme(!isDarkMode.value);\n    };\n\n    onMounted(() => {\n      const savedTheme = localStorage.getItem('xhrm-theme');\n      if (\n        savedTheme === 'dark' ||\n        (!savedTheme &&\n          window.matchMedia('(prefers-color-scheme: dark)').matches)\n      ) {\n        applyTheme(true);\n      }\n    });\n\n    return {\n      isDarkMode,\n      toggleDarkMode,\n    };\n  },\n};\n</script>\n\n<style lang=\"scss\" scoped>\n.XHRM-dark-mode-toggle {\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  margin-right: 15px;\n\n  .oxd-icon-button {\n    color: var(--oxd-text-primary);\n    transition: transform 0.3s ease;\n\n    &:hover {\n      transform: rotate(15deg) scale(1.1);\n    }\n  }\n}\n\n.XHRM-theme-icon {\n  width: 20px;\n  height: 20px;\n}\n</style>\n"],"mappings":";;EACOA,KAAK,EAAC;AAAuB;;;;uBAAlCC,mBAAA,CAiBM,OAjBNC,UAiBM,GAhBJC,mBAAA,CAeS;IAdPC,IAAI,EAAC,QAAQ;IACbJ,KAAK,EAAC,iBAAiB;IACtBK,KAAK,EAAWC,MAAA,CAAAC,UAAU,GAAaC,IAAA,CAAAC,EAAE,mCAA6CD,IAAA,CAAAC,EAAE;IAKxFC,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEN,MAAA,CAAAO,cAAA,IAAAP,MAAA,CAAAO,cAAA,IAAAD,IAAA,CAAc;MAEtBE,YAAA,CAIYC,mBAAA;IAHVX,IAAI,EAAC,KAAK;IACTY,IAAI,EAAEV,MAAA,CAAAC,UAAU;IACjBP,KAAK,EAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}